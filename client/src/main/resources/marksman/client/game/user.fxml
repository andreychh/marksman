<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="marksman.client.game.user.FXUser">
    <center>
        <fx:include source="field.fxml"/>
    </center>
    <left>
        <fx:include source="players.fxml"/>
    </left>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="fireButton" mnemonicParsing="false" text="Fire" onAction="#onFireButtonAction"/>
                <Button fx:id="pauseButton" mnemonicParsing="false" text="Pause" onAction="#onPauseButtonAction"/>
            </children>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
