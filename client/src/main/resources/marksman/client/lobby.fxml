<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="384.0" prefWidth="530.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="marksman.client.components.LobbyComponent">
    <center>
        <VBox fx:id="players" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0"
              BorderPane.alignment="CENTER"/>
    </center>
    <top>
        <Label text="Lobby" BorderPane.alignment="CENTER"/>
    </top>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="530.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#onReadyButtonAction" text="Ready"/>
                <Button mnemonicParsing="false" onAction="#onExitLobbyButtonAction" text="Exit"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
